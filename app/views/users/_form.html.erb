<%= form_for(@user) do |f| %>

    <form role="form">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.text_field :password, class: "form-control", placeholder: "Enter Password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Enter Password" %>
      </div>
      <div class="form-group">
      <% if @user.new_record? %>
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      <% else %>
        <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
      </div>
    </form>
    
<% end %>